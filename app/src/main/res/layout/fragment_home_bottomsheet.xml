<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_home_bottomsheet_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#23B877"
            android:layout_marginTop="18dp"
            tools:context=".presentation.HomeBottomsheetFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_bottomsheet_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="84dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_home_bottomsheet_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/ic_move"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home_bottomsheet_move"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="이동"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/iv_home_bottomsheet_move"
                    app:layout_constraintStart_toStartOf="@id/iv_home_bottomsheet_move"
                    app:layout_constraintTop_toBottomOf="@id/iv_home_bottomsheet_move"
                    app:layout_constraintVertical_bias="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_bottomsheet_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="66dp"
                app:layout_constraintBottom_toBottomOf="@id/cl_home_bottomsheet_first"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cl_home_bottomsheet_first">

                <ImageView
                    android:id="@+id/iv_home_bottomsheet_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/ic_trash"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_home_bottomsheet_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="4dp"
                    android:text="삭제"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/iv_home_bottomsheet_trash"
                    app:layout_constraintStart_toStartOf="@id/iv_home_bottomsheet_trash"
                    app:layout_constraintTop_toBottomOf="@id/iv_home_bottomsheet_trash"
                    app:layout_constraintVertical_bias="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01"
            android:textColor="#23B877"
            android:textSize="12sp"
            android:layout_marginStart="14dp"
            android:layout_marginHorizontal="6dp"
            android:paddingHorizontal="11dp"
            android:paddingVertical="5dp"
            android:background="@drawable/rect_green_radius_15_white"
            />

    </FrameLayout>

</layout>